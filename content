      <button class="btn-cancel" id="modal-cancel-btn">Cancel</button>
      <button class="btn-confirm" id="modal-confirm-btn">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M2 7.5L5.5 11L12 3.5" stroke="white" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
        Confirm and open LinkedIn
      </button>
