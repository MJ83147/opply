<div class="toast" id="toast">
  <span class="toast-icon">&#10003;</span>
  <span id="toast-msg"></span>
</div>

<script>
const SHEET_CSV = "https://docs.google.com/spreadsheets/d/e/2PACX-1vSrEo6UtDrv1Exz4Km7JX76sy9EDHmSgvHZ2Cdbsc9A8va_IqEC6ySIN1f0ArQmNJKcgdy8meEFlOyY/pub?output=csv";

const TEAM = ["Alex Turner","Beth Clarke","Chris Hall","Dana Kim","Elliot James","Fiona Wright","George Patel","Hannah Scott","Isla Morgan","Jake Ellis"];

let POSTS = [];
let postedState = {};
let currentStatus = "all";
let currentFormat = "all";
let currentTheme = "all";
let pendingPostId = null;

// Team dropdown
const sel = document.getElementById("team-member");
TEAM.forEach(name => { const o = document.createElement("option"); o.value = name; o.textContent = name; sel.appendChild(o); });

// CSV parser that handles quoted multiline fields
function parseCSV(text) {
  const rows = [];
  let row = [], field = "", inQuote = false;
  for (let i = 0; i < text.length; i++) {
    const ch = text[i], next = text[i+1];
    if (inQuote) {
      if (ch === '"' && next === '"') { field += '"'; i++; }
      else if (ch === '"') { inQuote = false; }
      else { field += ch; }
    } else {
      if (ch === '"') { inQuote = true; }
      else if (ch === ',') { row.push(field); field = ""; }
      else if (ch === '\n') { row.push(field); rows.push(row); row = []; field = ""; }
      else if (ch === '\r') {}
      else { field += ch; }
    }
  }
  if (field || row.length) { row.push(field); rows.push(row); }
  return rows;
}

async function loadPosts() {
  try {
    const resp = await fetch(SHEET_CSV);
    if (!resp.ok) throw new Error();
    const text = await resp.text();
    const rows = parseCSV(text);
    const headers = rows[0].map(h => h.trim().toLowerCase());
    const iId = headers.indexOf("#");
    const iPost = headers.indexOf("post");
    const iTheme = headers.indexOf("theme");
    const iFormat = headers.indexOf("format");

    POSTS = rows.slice(1).filter(r => r[iId] && r[iId].trim()).map(r => ({
      id: r[iId].trim(),
      copy: (r[iPost] || "").trim(),
      theme: (r[iTheme] || "").trim(),
      format: (r[iFormat] || "").trim()
    }));

    buildFormatFilters();
    buildThemeFilters();
    updateStats();
    renderPosts();
  } catch(e) {
    document.getElementById("posts-grid").innerHTML = `<div class="empty-state"><h3>Could not load posts</h3><p>Check the Google Sheet is published to the web and try refreshing.</p></div>`;
  }
}

function buildThemeFilters() {
  const themes = [...new Set(POSTS.map(p => p.theme).filter(Boolean))].sort();
  const container = document.getElementById("theme-filters");
  container.innerHTML = `<button class="filter-btn active" data-theme="all">All</button>` +
    themes.map(t => `<button class="filter-btn" data-theme="${t}">${t}</button>`).join("");
  container.querySelectorAll(".filter-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      container.querySelectorAll(".filter-btn").forEach(b => b.classList.remove("active"));
      btn.classList.add("active");
      currentTheme = btn.dataset.theme;
      renderPosts();
    });
  });
}

function buildFormatFilters() {
  const formats = [...new Set(POSTS.map(p => p.format).filter(Boolean))].sort();
  const container = document.getElementById("format-filters");
  container.innerHTML = `<button class="filter-btn active" data-format="all">All</button>` +
    formats.map(f => `<button class="filter-btn" data-format="${f}">${f}</button>`).join("");
  container.querySelectorAll(".filter-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      container.querySelectorAll(".filter-btn").forEach(b => b.classList.remove("active"));
      btn.classList.add("active");
      currentFormat = btn.dataset.format;
      renderPosts();
    });
  });
}

function getFiltered() {
  return POSTS.filter(p => {
    const isPosted = !!postedState[p.id];
    if (currentStatus === "available" && isPosted) return false;
    if (currentStatus === "posted" && !isPosted) return false;
    if (currentFormat !== "all" && p.format !== currentFormat) return false;
    if (currentTheme !== "all" && p.theme !== currentTheme) return false;
    return true;
  });
}

function updateStats() {
  const posted = Object.keys(postedState).length;
  document.getElementById("stat-available").textContent = POSTS.length - posted;
  document.getElementById("stat-posted").textContent = posted;
  document.getElementById("stat-total").textContent = POSTS.length;
}

function renderPosts() {
  const grid = document.getElementById("posts-grid");
  const filtered = getFiltered();
  if (!filtered.length) {
    grid.innerHTML = `<div class="empty-state"><h3>No posts match</h3><p>Try adjusting the filters above.</p></div>`;
    return;
  }
  grid.innerHTML = filtered.map(post => {
    const isPosted = !!postedState[post.id];
    const ps = postedState[post.id];
    return `<div class="post-card ${isPosted ? "posted" : ""}">
      <div class="card-meta">
        ${isPosted
          ? `<span class="tag tag-posted">Posted</span>`
          : `<span class="tag tag-format">${esc(post.format)}</span><span class="tag tag-theme">${esc(post.theme)}</span>`}
      </div>
      <div class="post-copy">${esc(post.copy)}</div>
      ${isPosted ? `<div class="posted-by">Posted by ${esc(ps.postedBy)} &middot; ${ps.postedAt}</div>` : ""}
      <div class="card-actions">
        ${isPosted
          ? `<button class="btn-posted">&#10003; Posted</button>`
          : `<button class="btn-post" onclick="openConfirm('${post.id}')">
              <svg width="13" height="13" viewBox="0 0 15 15" fill="none"><path d="M12 7.5H3M8.5 4L12 7.5 8.5 11" stroke="white" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/></svg>
              Post to LinkedIn
            </button>`}
      </div>
    </div>`;
  }).join("");
}

function esc(s) { return (s||"").replace(/&/g,"&amp;").replace(/</g,"&lt;").replace(/>/g,"&gt;").replace(/"/g,"&quot;"); }

function openConfirm(postId) {
  const member = document.getElementById("team-member").value;
  if (!member) { document.getElementById("member-warning").classList.add("visible"); return; }
  document.getElementById("member-warning").classList.remove("visible");
  const post = POSTS.find(p => p.id === postId);
  pendingPostId = postId;
  document.getElementById("modal-preview-text").textContent = post.copy;
  document.getElementById("modal-note").innerHTML = `This will be marked as posted by <strong>${esc(member)}</strong>. The text will be copied to your clipboard and LinkedIn will open ready to paste.`;
  document.getElementById("modal-overlay").classList.add("open");
}

function closeModal() { document.getElementById("modal-overlay").classList.remove("open"); pendingPostId = null; }

function confirmPost() {
  const member = document.getElementById("team-member").value;
  if (!member || !pendingPostId) return;
  const post = POSTS.find(p => p.id === pendingPostId);
  navigator.clipboard.writeText(post.copy).catch(() => {});
  const now = new Date();
  postedState[post.id] = { postedBy: member, postedAt: "Today, " + now.toLocaleTimeString("en-GB", { hour:"2-digit", minute:"2-digit" }) };
  window.open("https://www.linkedin.com/feed/?shareActive=true&text=" + encodeURIComponent(post.copy), "_blank");
  closeModal();
  updateStats();
  renderPosts();
  showToast("Text copied and LinkedIn opened.");
}

function showToast(msg) {
  const t = document.getElementById("toast");
  document.getElementById("toast-msg").textContent = msg;
  t.classList.add("show");
  setTimeout(() => t.classList.remove("show"), 3200);
}

document.getElementById("status-filters").querySelectorAll(".filter-btn").forEach(btn => {
  btn.addEventListener("click", () => {
    document.getElementById("status-filters").querySelectorAll(".filter-btn").forEach(b => b.classList.remove("active"));
    btn.classList.add("active");
    currentStatus = btn.dataset.status;
    renderPosts();
  });
});

document.getElementById("modal-close-btn").addEventListener("click", closeModal);
document.getElementById("modal-cancel-btn").addEventListener("click", closeModal);
document.getElementById("modal-confirm-btn").addEventListener("click", confirmPost);
document.getElementById("modal-overlay").addEventListener("click", e => { if (e.target === document.getElementById("modal-overlay")) closeModal(); });

loadPosts();
</script>
</body>
</html>
